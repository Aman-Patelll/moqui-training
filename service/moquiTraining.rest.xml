<resource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/rest-api-3.xsd"
 name="party" displayName="Rest API" require-authentication="anonymous-all">
    <method type="post">
        <service name="MoquiTrainingService.create#Party"/>
    </method>
    <id name="partyId">
        <method type="get">
                <service name="MoquiTrainingService.find#Party"/>
        </method>
        <method type="put">
            <service name="MoquiTrainingService.store#Party"/>
        </method>
        <method type="delete">
            <service name="MoquiTrainingService.delete#Party"/>
        </method>
    </id>
</resource>
